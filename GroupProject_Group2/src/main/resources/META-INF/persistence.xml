<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="GroupProject_Group2">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/mySQL</jta-data-source>
		<class>com.project.entities.BaseData</class>
		<class>com.project.entities.EventCause</class>
		<class>com.project.entities.UE</class>
		<class>com.project.entities.User</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
